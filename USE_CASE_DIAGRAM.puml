@startuml Use Case Diagram - AI Academic Advisor

title Use Case Diagram

left to right direction

actor Student as student
actor "Academic Advisor" as advisor

rectangle "AI Academic Advisor System" {
  
  package "Authentication" {
    (Login) as login
    (Select Role) as selectRole
    (Logout) as logout
  }
  
  package "Student Features" {
    (View Dashboard) as viewDashboard
    (View Academic Progress) as viewProgress
    (Browse Course Catalog) as browseCourses
    (Search Courses) as searchCourses
    (Filter Courses) as filterCourses
    (View Course Details) as viewCourseDetails
    (Chat with AI Advisor) as chatAI
    (Get Course Recommendations) as getRecommendations
    (View Notifications) as viewNotifications
    (Mark Notifications Read) as markRead
  }
  
  package "Admin Features" {
    (View Advisor Dashboard) as viewAdvisorDashboard
    (Review Student Plans) as reviewPlans
    (Approve Study Plan) as approvePlan
    (Reject Study Plan) as rejectPlan
    (View Plan Statistics) as viewStats
    (Filter Plans by Status) as filterPlans
  }
  
  package "Shared Features" {
    (View Profile) as viewProfile
  }
}

